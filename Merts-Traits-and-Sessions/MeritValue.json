{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "analysisUrl": {
            "@id": "https://www.datalinker.org/context/MeritValue-AnalysisUrl",
            "@type": "@id",
            "type": "string",
            "format": "uri",
            "dldescription": "Provides further information about the analysis"
        },
        "animalUrl": {
            "@id": "https://www.datalinker.org/context/MeritValue-AnimalUrl",
            "@type": "@id",
            "type": "string",
            "format": "uri",
            "dldescription": "Provides further information about the animal",
            "dltype": "https://www.datalinker.org/context/Animal"
        },
        "animalIdentifiers": {
            "@id": "http://www.datalinker.org/context/AnimalIdentifiers",
            "@type": "https://www.datalinker.org/contexts/2.0/AnimalIdentifier.jsonld",
            "type": "array",
            "items": {
                "type": "object"
            },
            "@container": "@set",
            "dldescription": "Array of animal identifiers"
        },
        "meritDefinition": {
            "@id": "https://www.datalinker.org/context/MeritValue-MeritDefinition",
            "@type": "@id",
            "type": "string",
            "format": "uri",
            "dldescription": "Defines the merit - its name, type, unit and how it is computed",
            "dltype": "https://www.datalinker.org/context/MeritDefinition"
        },
        "meritShortName": {
            "@id": "http://www.datalinker.org/context/MeritValue-MeritShortName",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "Short name for the merit"
        },
        "meritType": {
            "@id": "https://www.datalinker.org/context/MeritType",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "Indicates what type of merit it is within the provider system. Eg.In SIL it can be Breeding Value or Index, In LIC it can be BW or PW"
        },
        "value": {
            "@id": "https://www.datalinker.org/context/MeritValue-Value",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "Value for the merit"
        },
        "displayValue": {
            "@id": "https://www.datalinker.org/context/MeritValue-DisplayValue",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "Display Value for the merit"
        },
        "meritKey": {
            "@id": "https://www.datalinker.org/context/MeritValue-MeritKey",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "Underlying identifier for the merit value "
        },
        "accuracy": {
            "@id": "https://www.datalinker.org/context/MeritValue-Accuracy",
            "@type": "xsd:decimal",
            "type": "number",
            "dldescription": "Percentage accuracy of the reported value"
        },
        "meritID": {
            "@id": "https://www.datalinker.org/context/MeritValue-MeritID",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "The identifier for the merit value"
        }
    }
}