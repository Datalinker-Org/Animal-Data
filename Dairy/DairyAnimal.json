{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "@id": "https://www.datalinker.org/context/DairyAnimal-id",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Unique Id of the animal"
    },
    "animal": {
      "@id": "https://www.datalinker.org/context/DairyAnimal-animal",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dldescription": "Url to animal details (https://www.datalinker.org/context/Animal)"
    },
    "animalEvents": {
      "@id": "https://www.datalinker.org/context/DairyAnimalEvent",
      "@container": "@set",
      "@type": "http://www.datalinker.org/contexts/2.0/DairyAnimalEvent.jsonld",
      "type": "array",
      "items": { "type": "object" },
      "dldescription": "The list of animal related events"
    }
  }
}