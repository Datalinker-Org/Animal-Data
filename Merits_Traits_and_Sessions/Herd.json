{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "herdCodes": {
      "@id": "[HerdCodes](#HerdCodes)",
      "@type": "xsd:string",
      "type": "array",
      "items": { "type": "string" },
      "@container": "@set",
      "dldescription": "URN identifier for the herd of the animal. e.g.urn:nzl:pri:animal:sil:<herdstring>"
    },
    "herdName": {
      "@id": "[HerdName](#HerdName)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Name of the herd"
    },
    "speciesCommonName": {
      "@id": "[SpeciesCommonName](#SpeciesCommonName)",
      "@type": "xsd:string",
      "type": "string",
      "dldescription": "Common term for species. Enumeration values: Cattle, Deer, Goats, Sheep"
    },
    "contactPerson": {
      "@id": "[ContactPoint](https://github.com/Datalinker-Org/Shared/blob/master/ContactPoint.md)",
      "@type": "@id",
      "type": "array",
      "items": { "type": "object" },
      "@container": "@set",
      "dldescription": "Contact of the person in charge of the herd"
    }
  }
}
