{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "animalUrl": {
            "@id": "https://www.datalinker.org/context/AnimalMerits-AnimalUrl",
            "@type": "xsd:string",
            "type": "string",
            "format": "uri",
            "dldescription": "URL to retrive further information about the animal"
        },
        "animalIdentifiers": {
            "@id": "http://www.datalinker.org/context/AnimalIdentifiers",
            "@type": "@id",
            "type": "array",
            "items": {
                "type": "object"
            },
            "@container": "@set",
            "dldescription": "Array of animal identifiers"
        },
        "analyses": { 
            "@id": "https://www.datalinker.org/context/MeritAnalysis",
            "dldescription": "Sets of analysis results for the animal",
            "@type": "@id",
            "type":"array",
            "items":{
                "type":"object"
            },
            "@container":"@set"
        }
    }
}
