{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "herdCodes": {
      "@id": "https://www.datalinker.org/context/AnimalHerd-HerdCodes",
      "@type": "xsd:string",
      "type": "array",
      "items": { "type": "string" },
      "@container": "@list",
      "dldescription": "URN identifier for the herd of the animal. e.g.urn:nzl:pri:animal:sil:<herdstring>"
    },
    "animals": {
      "@id": "https://www.datalinker.org/context/AnimalHerd-Animals",
      "@type": "@id",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "@container": "@list",
      "dldescription": "Array of Animal Identifiers",
      "dltype": "https://www.datalinker.org/context/Animal"
    },
    "traits": {
      "@id": "https://www.datalinker.org/context/AnimalHerd-Traits",
      "@type": "@id",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "@container": "@list",
      "dldescription": "URL allows to download traits for a flock",
      "dltype": "https://www.datalinker.org/context/Trait"
    },
    "traitDefinitions": {
      "@id": "https://www.datalinker.org/context/AnimalHerd-TraitDefinitions",
      "@type": "@id",
      "type": "string",
      "format": "uri",
      "dldescription": "Trait definitions valid for the given herd",
      "dltype": "https://www.datalinker.org/context/TraitDefinition"
    }
  }
}