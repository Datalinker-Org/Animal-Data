{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "animalUrl": {
            "@id": "https://www.datalinker.org/context/Trait-AnimalUrl",
            "@type": "@id",
            "type": "string",
            "format": "uri",
            "dldescription": "URL provides further information on the animal",
            "dltype": "https://www.datalinker.org/context/Animal"
        },
        "traitDefinition": {
            "@id": "https://www.datalinker.org/context/Trait-TraitDefinition",
            "@type": "@id",
            "type": "string",
            "format": "uri",
            "dldescription": "Definitions valid for the herd",
            "dltype": "http://www.datalinker.org/context/TraitDefinition"
        },
        "recordingHerd": {
            "@id": "https://www.datalinker.org/context/Trait-RecordingHerd",
            "@type": "@id",
            "type": "string",
            "format": "uri",
            "dldescription": "URL provides herd information for which the trait was recorded",
            "dltype": "https://www.datalinker.org/context/Herd"
        },
        "animalIdentifiers": {
            "@id": "http://www.datalinker.org/context/AnimalIdentifiers",
            "@type": "@id",
            "type": "array",
            "items": {
                "type": "object"
            },
            "@container": "@set",
            "dldescription": "Array of animal identifiers"
        },
        "recordingYear": {
            "@id": "https://www.datalinker.org/context/Trait-RecordingYear",
            "@type": "xsd:integer",
            "type": "string",
            "dldescription": "Year in which the trait was recorded"
        },
        "recordingPeriod": {
            "@id": "https://www.datalinker.org/context/Trait-RecordingPeriod",
            "@type": "xsd:integer",
            "type": "string",
            "dldescription": "Month of the year in which the trait was recorded"
        },
        "recordingMob": {
            "@id": "https://www.datalinker.org/context/Trait-RecordingMob",
            "@type": "xsd:integer",
            "type": "string",
            "dldescription": "Mob number usually 0-9"
        },
        "recordingDate": {
            "@id": "https://www.datalinker.org/context/Trait-RecordingDate",
            "@type": "xsd:date",
            "type": "string",
            "dldescription": "Date of recording of the trait"
        },
        "traitCode": {
            "@id": "https://www.datalinker.org/context/Trait-TraitCode",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "URN based short code that represents the trait"
        },
        "traitValue": {
            "@id": "https://www.datalinker.org/context/Trait-TraitValue",
            "@type": "xsd:string",
            "type": "string",
            "dldescription": "Observed value of the trait"
        }
    }
}
